# Application
PORT=3000                     # The port number where the application will run (e.g., 3000 for http://localhost:3000)
NODE_ENV=development           # The environment mode: 'development' for local testing, 'production' for live deployment

# Database
DATABASE_HOST=localhost        # The database server address (e.g., 'localhost' for local, or a remote server IP)
DATABASE_PORT=5432             # The port number for the database (default for PostgreSQL is 5432)
DATABASE_USER=postgres         # The username to connect to the database (e.g., 'postgres' for PostgreSQL)
DATABASE_PASSWORD=postgres     # The password for the database user (replace 'postgres' with your actual password)
DATABASE_NAME=instagram_bridge # The name of the database used by the application

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token # The token for your Telegram bot (get it from BotFather on Telegram)
TELEGRAM_CHAT_ID=your_chat_id              # The ID of the Telegram chat where notifications will be sent

# Instagram
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token # The access token for interacting with the Instagram API
INSTAGRAM_VERIFY_TOKEN=your_verify_token           # A token to verify webhook requests from Instagram

# Docker (optional, used in docker-compose)
DOCKER_IMAGE=instagram-bridge-api:latest # The name of the Docker image for the application (e.g., 'image_name:tag')
